@model IEnumerable<BookStore.Models.Domain.Genre>
@{
}


<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
             <a class="btn btn-dark" href="/Genre/Add">Add more</a>
        </div>
    </div>
</div>

    <div class="row">
        <h3>Genres</h3>

        <table class="table tabletable-striped table-bordered table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actiom</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-success" href="/Genre/Update?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      </div>



